<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="logfile" xsi:type="File" fileName="degbug.log.txt" layout="${time}|${level:uppercase=true}|${logger}|${message}" />
    <target name="logconsole" xsi:type="Console" layout="${time}|${level:uppercase=true}|${logger}|${message}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug,Error" writeTo="logfile" enabled="true" />
    <logger name="*" minlevel="Info,Warn,Error" writeTo="logconsole" enabled="true" />
  </rules>
</nlog>